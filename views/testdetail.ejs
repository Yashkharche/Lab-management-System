<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="style.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="css/sidebar.css">
     <!-- CSS only -->
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<style>
    .test{
        margin-top: 480px;
        background-color: white;
        width: 70vw;
        height: 80vh;
    }
    .test h4{
        margin-top: 10px;
        margin-left: 15px;
    }
</style>   
</head>
<body>
  <div class="sidebar close">
    <div class="logo-details">
      <img class="logoimg" src="photos/logo.png" alt="">
      <span class="logo_name">LABALLY</span>
    </div>
    <ul class="nav-links">
      <li>
        <a href="userprofile">
          <i class="bi bi-person-circle"></i>
          <span class="link_name">Profile</span>
        </a>
      </li>
      <li>
        <div class="iocn-link">
          <a href="takeappointment">
            <i class='bx bx-book-alt' ></i>
            <span class="link_name">Take a Appointment</span>
          </a>
        </div>
      </li>
      <li>
      <div class="iocn-link">
        <a href="testdetail">
          <i class='bx bx-book-alt' ></i>
          <span class="link_name">View Test Details</span>
        </a>
      </div>
    

    </li>
      <li>
        <div class="iocn-link" id="labemploye">
          <a href="">
            <i class='bx bx-book-alt' ></i>
            <span class="link_name">Reports</span>
          </a>
        </div>
      

      </li>
      <li>
    <div class="profile-details">
      <div class="name-job">
       <div class="profile_name">Logout</div>
      </div>
      <a href="home"><i class='bx bx-log-out' ></i></a>
    </div>
  </li>
</ul>
  </div>
  <section class="home-section">
    <div class="home-content">
      <i class='bx bx-menu' ></i>
      <div class="test">
          <h4>Test Details</h4>
          <hr>
          <table class="table">
                <thead>
                  <tr>
                    <th scope="col">S.No</th>
                    <th scope="col">Test Title</th>
                    <th scope="col">Price</th>
                  </tr>
                </thead>
                <tbody>
                <% test.forEach(function(tests){ %>
                    <tr class="rowmodi">
                      <th scope="row"><%= tests._id %></th>
                      <td><%= tests.title %></td>
                      <td><%= tests.price %></td>
                    </tr>
                  <% }) %>   
          
          
        
                </tbody>
          </table>
      </div>
      
    </div>

    </section>
    <script>
    let arrow = document.querySelectorAll(".arrow");
    for (var i = 0; i < arrow.length; i++) {
      arrow[i].addEventListener("click", (e)=>{
     let arrowParent = e.target.parentElement.parentElement;//selecting main parent of arrow
     arrowParent.classList.toggle("showMenu");
      });
    }
    let sidebar = document.querySelector(".sidebar");
    let sidebarBtn = document.querySelector(".bx-menu");
    console.log(sidebarBtn);
    sidebarBtn.addEventListener("click", ()=>{
      sidebar.classList.toggle("close");
    });
    </script>
  </body>
  </html>