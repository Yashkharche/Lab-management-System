<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="style.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="css/sidebar.css">
     <!-- CSS only -->
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   </head>
<body>
  <div class="sidebar close">
    <div class="logo-details">
      <img class="logoimg" src="photos/logo.png" alt="">
      <span class="logo_name">LABALLY</span>
    </div>
    <ul class="nav-links">
      <li class="active">
        <a href="admin">
          <i class='bx bx-grid-alt' ></i>
          <span class="link_name">Dashboard</span>
        </a>
      </li>
      <li>
        <a href="profile">
          <i class="bi bi-person-circle"></i>
          <span class="link_name">Profile</span>
        </a>
      </li>
      <li>
        <div class="iocn-link" id="labemploye">
          <a href="doctors">
            <i class='bx bx-book-alt' ></i>
            <span class="link_name">Employee</span>
          </a>
        </div>
      </li>
      <li>
        <a href="test">
          <i class='bx bx-pie-chart-alt-2' ></i>
          <span class="link_name">Test</span>
        </a>
      </li>
      <li>
        <a href="appointmentlist">
          <i class='bx bx-line-chart' ></i>
          <span class="link_name">Appointments</span>
        </a>
      </li>
      <li>
        <div class="iocn-link">
          <a href="branch">
            <i class="bi bi-geo-alt"></i>
            <span class="link_name">Centers</span>
          </a>
        </div>
      </li>
      <li>
        <a href="reguser">
          <i class='bx bx-compass' ></i>
          <span class="link_name">Reg.user</span>
        </a>
      </li>
      <li>
        <a href="#">
          <i class='bx bx-history'></i>
          <span class="link_name">Reports</span>
        </a>
      </li>
      <li>
        <a href="account">
          <i class="bi bi-bank"></i>
          <span class="link_name">Accounts</span>
        </a>
      </li>
      </li>
      <li>
    <div class="profile-details">
      <div class="name-job">
       <div class="profile_name"><a href="login">Logout</a></div>
      </div>
      <a href="home"><i class='bx bx-log-out' ></i></a>
    </div>
  </li>
</ul>
  </div>
  <section class="home-section">
    <div class="home-content">
      <i class='bx bx-menu' ></i>
      <div class="boxcointainer">
        <div class="row">
          <div class="col-lg-3">
            <div class="box">
              <h6><%= count %></h6>
              <h5>Tests</h5>
              <div class="boxbottom">
                <a href="test"><p>More info<i class="bi bi-arrow-right-circle"></i></p></a>
              </div>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="box">
              <h6><%= countuser%></h6>
              <h5>Patients</h5>
              <div class="boxbottom">
                <a href=""><p>More info<i class="bi bi-arrow-right-circle"></i></p></a>
              </div>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="box">
              <h6><%= countemploye%></h6>
              <h5>Employee</h5>
              <div class="boxbottom">
                <a href="doctors"><p>More info<i class="bi bi-arrow-right-circle"></i></p></a>
              </div>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="box">
              <h6><%=countcenter %></h6>
              <h5>Centers</h5>
              <div class="boxbottom">
                <a href="branch"><p>More info<i class="bi bi-arrow-right-circle"></i></p></a>
              </div>
            </div>
          </div>
        
        </div>
        <div class="row">
          <div class="col-lg-4">
            <div class="box1">
              <i class="bi bi-cash"></i>
              <h6>Today Income Amount</h6>
              <h6>Rs.<%= first %></h6>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="box1">
              <i class="bi bi-cash"></i>
              <h6>Total Expense Amount</h6>
              <h6>Rs<%= second%></h6>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="box1">
              <i class="bi bi-cash"></i>
              <h6>Today Profit Amount</h6>
              <h6>Rs.<%= third %></h6>
            </div>
          </div>
        </div>
      </div>
      </div>
      
  </section>
  <script>
  let arrow = document.querySelectorAll(".arrow");
  for (var i = 0; i < arrow.length; i++) {
    arrow[i].addEventListener("click", (e)=>{
   let arrowParent = e.target.parentElement.parentElement;//selecting main parent of arrow
   arrowParent.classList.toggle("showMenu");
    });
  }
  let sidebar = document.querySelector(".sidebar");
  let sidebarBtn = document.querySelector(".bx-menu");
  console.log(sidebarBtn);
  sidebarBtn.addEventListener("click", ()=>{
    sidebar.classList.toggle("close");
  });
  </script>
</body>
</html>
