     <div class="profile">
         <h4>User Profile</h4>
          <hr class="hr">
          <form action="/userprofile" method="post" autocomplete="off">
            <div class="flex">
            <label for="currentpassword">Username</label>
          <input type="text" id="currentpassword" name="name" value="<%=user.username %>">
          </div>
          <div class="flex">
          <label for="newpassword">Password</label>
          <input type="password" id="newpassword" name="password" value="<%=user.password %>"  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
          </div>
          <div class="flex">
          <label for="confirmpassword">Email</label>
          <input type="email" id="confirmpassword" name="email" value="<%=user.email %>">
          </div>
          <div class="flex">
            <label for="confirmpassword">Phone</label>
            <input type="tel" id="confirmpassword" name="phone" value="<%=user.number %>" pattern="[0-9]{10}" title="Enter correct format">
          </div>
          <button class="btn btn-primary" type="submit">Update</button>
          </form>
          
     </div>
    </section>





        <script>
            let arrow = document.querySelectorAll(".arrow");
